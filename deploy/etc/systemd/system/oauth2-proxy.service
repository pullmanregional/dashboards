[Unit]
Description=oauth2-proxy service
After=network.target network-online.target nss-lookup.target
Wants=network-online.target nss-lookup.target
StartLimitIntervalSec=30
StartLimitBurst=3

[Service]
User=<dedicated user>
Group=<dedicated user group>
Restart=on-failure
RestartSec=30
WorkingDirectory=/home/<dedicated user>
ExecStart=/home/<dedicated user>/oauth2-proxy --config=/home/<dedicated user>/oauth2-proxy.cfg
ExecReload=/bin/kill -HUP $MAINPID

[Install]
WantedBy=multi-user.target